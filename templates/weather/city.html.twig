{% extends 'base.html.twig' %}

{# @var location \App\Entity\Location #}
{# @var weather \App\Entity\Weather #}

{% block title %}Weather in {{ location.getCity() }}, {{ location.getCountry() }}{% endblock %}

{% block body %}
    <main>
        <h1>Weather in {{ location.getCity() }}, {{ location.getCountry() }}</h1>

        <ul>
            {% for measurement in measurements %}
                <li>{{ measurement.getDateOfMeasurement()|date('d.m.Y') }}: {{ measurement.getTemperature() }}&deg;C</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
